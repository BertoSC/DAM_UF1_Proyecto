<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/fecha_diario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/titulo_diario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/amaticregular"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"/>

    <!-- ImageView para mostrar la imagen -->
    <ImageView
        android:id="@+id/imagen_diario"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/texto_diario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto del diario"
        android:gravity="center"
        android:fontFamily="@font/amaticregular"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELIMINAR"
        android:backgroundTint="@color/brown"
        android:textColor="@color/white"
        android:fontFamily="@font/amaticregular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
         />
</LinearLayout>
