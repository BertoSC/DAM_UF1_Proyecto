<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/fecha_diario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="14sp"
        android:fontFamily="@font/josefinesans"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/titulo_diario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/amaticregular"

        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"/>

<!--
    <ImageView
        android:id="@+id/imagen_diario"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        android:visibility="gone"

        />
-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagen_diario"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/texto_diario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto del diario"
        android:fontFamily="@font/josefinsanslight"
        android:textAlignment="textStart"
        android:textSize="23sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="13dp">

    <Button
        android:id="@+id/btn_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_editar"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        android:fontFamily="@font/amaticregular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_eliminar"
        android:backgroundTint="@color/brown"
        android:textColor="@color/white"
        android:fontFamily="@font/amaticregular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
         />

    </LinearLayout>

</LinearLayout>
